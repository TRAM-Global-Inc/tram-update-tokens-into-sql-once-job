{
  "name": "tram-template-run-once-job",
  "version": "1.0.0",
  "description": "TRAM Template Run Once Job",
  "main": "dist/app.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/app.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js\"",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "lint": "eslint --fix --ext .js,.jsx,.ts .",
    "ar-login": "npx google-artifactregistry-auth",
    "localinstall": "npm run ar-login && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tram-global-inc/tram-template-run-once-job.git"
  },
  "keywords": [
    "TRAM",
    "Cronjob",
    "Template"
  ],
  "author": "Isaiah Moran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tram-global-inc/tram-template-run-once-job/issues"
  },
  "homepage": "https://github.com/tram-global-inc/tram-template-run-once-job#readme",
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "@tram/tram-base-cron": "^1.0.0",
    "@tram/tram-base-streaming-producer": "^1.0.2",
    "@tram/tram-common-api-client": "^4.0.0",
    "@tram/tram-common-logging": "9.0.0",
    "@tram/tram-common-monitoring": "1.0.11",
    "@tram/tram-common-types": "^6.1.0",
    "@tram/tram-common-utils": "^1.0.0",
    "axios": "^1.1.3",
    "dotenv": "16.0.2",
    "firebase-admin": "^11.3.0",
    "ts-node": "^10.8.2"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "concurrently": "7.2.2",
    "eslint": "8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.4",
    "eslint-plugin-promise": "6.0.0",
    "husky": "8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
